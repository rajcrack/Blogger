generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "mysql"
    url       = "mysql://root:@localhost:3306/android_blogger" // uses connection pooling
    directUrl = "mysql://root:@localhost:3306/android_blogger" // uses a direct connection
}

model Post {
    id        String   @id @default(cuid())
    title     String
    subtitle  String?
    message   String?
    image     String?
    isActive  Boolean  @default(true)
    tags      String?
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")
}

model Admin {
    id       String  @id @default(cuid())
    username String
    password String
    isActive Boolean @default(false)
}
